<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FlowVsLiveDataFragment">

    <fragment
        android:id="@+id/FlowVsLiveDataFragment"
        android:name="com.avciapps.basedemoapp.FlowVsLiveDataFragment"
        android:label="Flow vs LiveData Demo"
        tools:layout="@layout/fragment_flow_vs_livedata" >

        <action
            android:id="@+id/action_FlowVsLiveDataFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
            
        <action
            android:id="@+id/action_FlowVsLiveDataFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.avciapps.basedemoapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first" >

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.avciapps.basedemoapp.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
            
        <action
            android:id="@+id/action_SecondFragment_to_FlowVsLiveDataFragment"
            app:destination="@id/FlowVsLiveDataFragment" />
    </fragment>
</navigation>
